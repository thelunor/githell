<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Array</title>
	<script type="text/javascript">
		//while
	    var i = 1;
		var sum = 0;
		while(i <= 10){
			sum+=i;
			i++;
		}
		document.write("sum : " + sum + "<br>");
		
		var sum2=0;
		for(var i = 0 ; i <= 10 ; i++){
			if(i % 3 === 0){
				console.log("i : " + i);
				console.log(0%3); //주의사항
				continue; //3의 배수는 누적하지 않겠다
				//break;
			}
			sum2+=i;
		}
		document.write("sum2 : " + sum2 + "<br>");
		
		var a = 1;
		do{
			document.write(a + "<br>");
			a++;
		}while(a < 11);
		
	</script>
</head>
